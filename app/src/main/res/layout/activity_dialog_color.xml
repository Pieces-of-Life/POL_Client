<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="360dp"
        android:layout_height="220dp"
        android:layout_gravity="bottom|center">

        <android.widget.Button
            android:id="@+id/btn_cancel"
            android:layout_width="29dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/transparent"
            android:text="취소"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.widget.Button
            android:id="@+id/btn_ok"
            android:layout_width="29dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            android:text="확인"
            android:textColor="#559DFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.widget.Button
            android:id="@+id/btn_purple"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="80dp"
            android:background="#CDB5FA"
            app:cornerRadius="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.widget.Button
            android:id="@+id/btn_blue"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="124dp"
            android:layout_marginTop="80dp"
            android:background="#9DC4F0"
            app:cornerRadius="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.widget.Button
            android:id="@+id/btn_peach"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="80dp"
            android:background="#F2ACAC"
            app:cornerRadius="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.widget.Button
            android:id="@+id/btn_green"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="276dp"
            android:layout_marginTop="80dp"
            android:background="#B9DF98"
            app:cornerRadius="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.widget.Button
            android:id="@+id/btn_yellow"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="152dp"
            android:background="#F7D698"
            app:cornerRadius="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.widget.Button
            android:id="@+id/btn_pink"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="124dp"
            android:layout_marginTop="152dp"
            android:background="#F8B2E8"
            app:cornerRadius="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.widget.Button
            android:id="@+id/btn_mint"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="152dp"
            android:background="#90DED3"
            app:cornerRadius="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.widget.Button
            android:id="@+id/btn_lime"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="276dp"
            android:layout_marginTop="152dp"
            android:background="#DFE07E"
            app:cornerRadius="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>